  See \code{\link{linnet}} for linear networks.
}
\examples{
  example(linnet)
  xx <- list(x=c(-1.5,0,0.5,1.5), y=c(1.5,3,4.5,1.5))
  X <- lpp(xx, letterA)
  plot(X)
  X
  summary(X)
}
